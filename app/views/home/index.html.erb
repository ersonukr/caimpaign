<table border="1" align="center">
  <thead>
    <tr>
      <th>Phone</th>
      <th>Response</th>
    </tr>
  </thead>
  <tbody>
    <% @calls.each do |call|  %>
    <tr>
      <td><%= call.phone %></td>
      <td><%= call.response %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @calls %>

<%= form_for :call, url: download_today_calls_path do |f| %>
  <%= f.date_field :created_at, as: :datepicker, required: false,
    :placeholder => 'Select date' %>
  <%= f.submit %>
<% end %>
